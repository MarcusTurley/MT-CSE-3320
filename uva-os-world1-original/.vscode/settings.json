{
    "files.exclude": {
        // "docs/**": true,
        "old/**": true,
        "src/current/usr/newlib": true,
        "src/experimental/**": true,
        "src/current/addon/usb/**": true,  // usb 
    }, 
    "search.exclude": {
        // "docs/**": true,
        "old/**": true,
        "staged/**": true,
        "src/current/usr/newlib": true,
        "src/current/addon/usb/**": true,  // usb 
        "src/experimental/**": true,        
        "*/*.asm": true,
        "*.sym": true,
        "*.dis": true,
        "*.d": true, 
    },
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "editor.rulers": [
          80,  // 2nd ruler with no color option        
     ],     
     // https://stackoverflow.com/questions/42307949/color-theme-for-vs-code-integrated-terminal
     // (more colors)
     "workbench.colorCustomizations" : {
        "terminal.foreground" : "#dddad6",
        "terminal.background" : "#000000"   // 383737
        "titleBar.activeBackground": "#f5ec42f5" // ... to differentiate agasint hosts...
    },
    // more terminal appearance https://code.visualstudio.com/docs/terminal/appearance
    "terminal.integrated.fontFamily" : "'Consolas', monospace",
    "[ARM]": {
      "editor.autoClosingBrackets": "never"
    },
    "[asm]": {
      "editor.autoClosingBrackets": "never"
    },    
    "[markdown]": {
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80
    },
    "todo-tree.general.tags": [
        "quest",         // can temporarily disable this for easy eyes...
        "!STUDENT_",
        "STUDENT_TODO"
        ],
    // https://marketplace.visualstudio.com/items?itemName=Gruntfuggly.todo-tree
    "todo-tree.highlights.customHighlight": {
        "quest": {
            "icon": "question",  // https://octicons.github.com/
            "type": "line",     // highlights the entire line containing the tag
            "foreground": "red",
            "background": "yellow",
            "iconColour": "blue"
        },
        "STUDENT_TODO": {
            "icon": "checklist",
            "type": "line",     // highlights the entire line containing the tag
            "foreground": "black",
            "background": "yellow",
            "iconColour": "black"
        },
        "!STUDENT_": {
            // "icon": "circle-slash",
            "type": "text",
            // "foreground": "red",
            "background": "lightgray",
            // "iconColour": "blue"
        }
    }
}
